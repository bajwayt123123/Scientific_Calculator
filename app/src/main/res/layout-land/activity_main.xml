<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_back"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="5sp"
        android:background="@drawable/white_back"
        android:fontFamily="@font/compassebold"
        android:gravity="bottom"
        android:maxLines="1"
        android:text=""
        android:paddingEnd="50dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/blue"
        android:textSize="25sp"
        tools:ignore="HardcodedText,RtlCompat" />

    <TextView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5sp"
        android:background="@drawable/white_back"
        android:fontFamily="@font/compassebold"
        android:maxLines="1"
        android:paddingBottom="15sp"
        android:text=""
        android:paddingEnd="50dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/bg1"
        android:textSize="40sp"
        tools:ignore="HardcodedText,RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/keypad_back"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"

            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <Button
                android:id="@+id/in"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="In"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/fac"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="x!"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/ac"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_red_button"
                android:elevation="20dp"
                android:text="AC"
                android:textAllCaps="true"
                android:textColor="#CF4B4B"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/c"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_red_button"
                android:elevation="10dp"
                android:text="C"
                android:textAllCaps="true"
                android:textColor="#CF4B4B"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/bb1"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="("
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/bb2"
                android:layout_width="80dp"
                android:layout_height="40sp"

                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text=")"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="4">

            <Button
                android:id="@+id/sin"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="sin"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/sqr"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="x²"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b7"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="7"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b8"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="8"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b9"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="9"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/div"
                android:layout_width="80dp"
                android:layout_height="40sp"

                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="÷"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/cos"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="cos"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/sqrt"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="√"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b4"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="4"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b5"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="5"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b6"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="6"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/mul"
                android:layout_width="80dp"
                android:layout_height="40sp"

                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="×"
                android:textAllCaps="true"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/tan"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="tan"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/inv"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/h_dark_button"
                android:elevation="100dp"
                android:text="1/x"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b1"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="1"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b2"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="2"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b3"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="3"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/min"
                android:layout_width="80dp"
                android:layout_height="40sp"

                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="-"
                android:textAllCaps="true"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/log"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="log"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/pi"
                android:layout_width="100dp"
                android:layout_height="40sp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/h_dark_button"
                android:elevation="100dp"
                android:text="π"
                android:textAllCaps="true"
                android:textColor="@color/back_color_light"
                android:textSize="17sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/dot"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="."
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b0"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_new_button"
                android:elevation="10dp"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/plus"
                android:layout_width="80dp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/h_dark_button"
                android:elevation="10dp"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/equal"
                android:layout_width="80dp"
                android:layout_height="40sp"

                android:background="@drawable/h_dark_button"
                android:text="="
                android:textAllCaps="true"
                android:textColor="@color/back_color_light"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>