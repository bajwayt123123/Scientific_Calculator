<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_back"
    android:orientation="vertical"
    android:weightSum="3"
    android:gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="380dp"
        android:layout_height="72dp"
        android:layout_marginEnd="5sp"
        android:background="@drawable/white_back"
        android:fontFamily="@font/compassebold"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingEnd="40dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/blue"
        android:textSize="35sp"
        tools:ignore="HardcodedText,RtlCompat,RtlSymmetry" />

    <TextView
        android:id="@+id/view1"
        android:layout_width="362dp"
        android:layout_height="149dp"
        android:layout_marginEnd="5sp"
        android:background="@drawable/white_back"
        android:fontFamily="@font/compassebold"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingEnd="40dp"
        android:paddingBottom="15sp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/bg2"
        android:textSize="60sp"
        tools:ignore="HardcodedText,RtlCompat,RtlSymmetry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/keypad_back"
        android:orientation="vertical"
        android:gravity="center">



        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"

            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/ac"
                android:layout_width="166dp"
                android:layout_height="80dp"
                android:layout_marginVertical="3dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/red_button"
                android:elevation="20dp"
                android:text="AC"
                android:textAllCaps="true"
                android:textColor="#CF4B4B"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/c"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="3dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/red_button"
                android:elevation="10dp"
                android:text="C"
                android:textAllCaps="true"
                android:textColor="#CF4B4B"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/div"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/dark_button"
                android:elevation="10dp"
                android:text="รท"
                android:textAllCaps="false"
                android:textColor="@color/text"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/b7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="7"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="8"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="9"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/mul"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/dark_button"
                android:elevation="10dp"
                android:text="ร"
                android:textAllCaps="true"
                android:textColor="@color/text"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/b4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="4"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="5"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="6"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/min"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/dark_button"
                android:elevation="10dp"
                android:text="-"
                android:textAllCaps="true"
                android:textColor="@color/text"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/b1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="1"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="2"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="3"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/plus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/dark_button"
                android:elevation="10dp"
                android:text="+"
                android:textAllCaps="true"
                android:textColor="@color/text"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/dot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="."
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/b0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/new_button"
                android:elevation="10dp"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

            <Button
                android:id="@+id/equal"
                android:layout_width="164dp"
                android:layout_height="80dp"
                android:background="@drawable/dark_button"
                android:elevation="10dp"
                android:text="="
                android:textAllCaps="true"
                android:textColor="@color/text"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText">

            </Button>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>